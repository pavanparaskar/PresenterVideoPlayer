<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abc.presentervideoplayer.sandyapp.SettingsActivity">

    <include
        android:id="@+id/setings_toolbar"
        layout="@layout/app_bar_layout"></include>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/setings_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/profile_picks"
        app:civ_border_color="#847474"
        app:civ_border_width="2dp" />

    <EditText
        android:id="@+id/set_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_image"
        android:layout_margin="10dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/username"
        android:hint="Username"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/set_profile_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/set_user_name"
        android:layout_margin="10dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/status_image"
        android:hint="Hey I am available Now..."
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/update_setting_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/set_profile_status"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:padding="5dp"
        android:text="Update"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

</RelativeLayout>
