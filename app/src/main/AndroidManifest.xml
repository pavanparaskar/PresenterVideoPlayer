<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abc.presentervideoplayer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/lanche_icon_chat_buddy"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".DeviceListActivity" />
        <activity android:name=".Main2Activity" />
        <activity
            android:name=".sandyapp.Main3ActivitySandy"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sandyapp.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".sandyapp.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".sandyapp.SettingsActivity"
            android:parentActivityName=".sandyapp.Main3ActivitySandy"
            android:screenOrientation="portrait" />
        <activity
            android:name=".sandyapp.GroupchatActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".sandyapp.PhoneLoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".sandyapp.tabs.FindFriendsActivity"
            android:parentActivityName=".sandyapp.Main3ActivitySandy"
            android:screenOrientation="portrait" />
        <activity
            android:name=".sandyapp.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".sandyapp.ChatActivity"
            android:parentActivityName=".sandyapp.Main3ActivitySandy"
            android:screenOrientation="portrait" />
        <activity
            android:name=".sandyapp.ForgotPasswordActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>